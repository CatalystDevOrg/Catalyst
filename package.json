{
	"name": "catalyst",
	"version": "2022.1.2-beta",
	"description": "A minimal Electron Web Browser",
	"main": "main/main.js",
	"private": true,
	"scripts": {
		"start": "electron .",
		"dev": "concurrently -k npm:start npm:tailwind",
		"tailwind": "tailwindcss -i ./styles.css -o ./output/tailwind.css --minify --watch",
		"tailwind:once": "tailwindcss -i ./styles.css -o ./output/tailwind.css --minify",
		"package": "electron-forge package",
		"publish": "electron-forge publish",
		"make": "electron-forge make"
	},
	"repository": "https://github.com/JaydenDev/Catalyst",
	"keywords": [
		"Electron",
		"Browser",
		"Internet"
	],
	"author": "JaydenDev",
	"license": "MIT",
	"devDependencies": {
		"@electron-forge/cli": "^6.0.0-beta.61",
		"@electron-forge/maker-deb": "^6.0.0-beta.63",
		"@electron-forge/maker-dmg": "^6.0.0-beta.61",
		"@electron-forge/maker-rpm": "^6.0.0-beta.61",
		"@electron-forge/maker-squirrel": "^6.0.0-beta.61",
		"@electron-forge/maker-zip": "^6.0.0-beta.61",
		"@electron-forge/publisher-github": "^6.0.0-beta.61",
		"concurrently": "^7.0.0",
		"electron": "^16.0.6",
		"electron-reloader": "^1.2.1",
		"tailwindcss": "^3.0.12"
	},
	"dependencies": {
		"cross-fetch": "^3.1.4",
		"electron-squirrel-startup": "^1.0.0"
	},
	"config": {
		"forge": {
			"packagerConfig": {
				"icon": "./assets/icon-scaled"
			},
			"publishers": [
				{
					"name": "@electron-forge/publisher-github",
					"config": {
						"repository": {
							"owner": "JaydenDev",
							"name": "Catalyst"
						},
						"draft": true
					}
				}
			],
			"makers": [
				{
					"name": "@electron-forge/maker-squirrel",
					"config": {
						"name": "catalyst"
					}
				},
				{
					"name": "@electron-forge/maker-zip",
					"platforms": [
						"darwin"
					]
				},
				{
					"name": "@electron-forge/maker-dmg",
					"config": {
						"format": "ULFO"
					}
				},
				{
					"name": "@electron-forge/maker-deb",
					"config": {}
				},
				{
					"name": "@electron-forge/maker-rpm",
					"config": {}
				}
			]
		}
	}
}
